<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="@drawable/dificult">

    <pl.droidsonroids.gif.GifImageView
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/sole"
        android:id="@+id/iv_sol"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <pl.droidsonroids.gif.GifImageView
        android:src="@drawable/arbol"
        android:id="@+id/iv_arbol"
        android:layout_height="100dp"
        android:layout_width="50dp"
        android:layout_marginRight="149dp"
        android:layout_marginEnd="149dp"
        android:layout_marginBottom="11dp"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/iv_sol"
        android:layout_toStartOf="@+id/iv_sol" />

    <pl.droidsonroids.gif.GifImageView
        android:layout_height="wrap_content"
        android:src="@drawable/avion"

        android:id="@+id/iv_avion"
        android:layout_width="70dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="150dp"
        android:layout_marginStart="150dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/iv_avion"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="41dp">

        <Button
            android:text="Vocales"
            android:layout_width="50dp"
            android:id="@+id/bt_1"
            android:layout_weight="1"
            android:background="#4db30e"
            android:layout_height="50dp" />

        <Button
            android:text="reconocer"
            android:layout_width="50dp"
            android:id="@+id/bt_4"
            android:layout_weight="1"
            android:background="#e0a118"
            android:layout_height="50dp" />

    </LinearLayout>
</RelativeLayout>