<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"

    android:background="@drawable/fondoo"
    >

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bt_go_to_back"
        android:text=" Regresar "
        android:onClick="ToGoBack"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bt_next_level"
        android:text="Siguiente"
        android:onClick="Level3Word"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="550dp"
        android:layout_height="60dp"
        android:id="@+id/bt_info"
        android:background="@drawable/info"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/bt_next_level"
        android:layout_alignStart="@+id/bt_next_level" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:id="@+id/Ll_two"
        android:layout_height="60dp"
        android:layout_above="@+id/bt_info"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/bt_o"
            android:layout_weight="1"
            android:background="@drawable/oo" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/bt_p"
            android:layout_weight="1"
            android:background="@drawable/pp" />

        <Button
            android:layout_width="match_parent"
            android:id="@+id/bt_q"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="@drawable/qq" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/bt_r"
            android:layout_weight="1"
            android:background="@drawable/rr" />
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/bt_s"
            android:layout_weight="1"
            android:background="@drawable/ss" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:id="@+id/bt_target_one"
        android:layout_height="60dp"

        android:layout_below="@+id/bt_go_to_back"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/bt_k"
            android:layout_weight="1"
            android:background="@drawable/kk" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/bt_l"
            android:layout_weight="1"
            android:background="@drawable/ll" />

        <Button
            android:layout_width="match_parent"
            android:id="@+id/bt_m"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="@drawable/mm" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/bt_n"
            android:layout_weight="1"
            android:background="@drawable/nn" />
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/bt_nn"
            android:layout_weight="1"
            android:background="@drawable/nn" />
    </LinearLayout>

</RelativeLayout>