<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/fondolibro"
    android:orientation="horizontal">

    <ImageView
        android:layout_width="@dimen/image_width"
        android:layout_height="@dimen/image_height"
        android:src="@drawable/angel"
        android:id="@+id/iv_angel"
        android:onClick="level2e"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="@dimen/image_width"
        android:layout_height="@dimen/image_height"
        android:src="@drawable/estrella"
        android:id="@+id/iv_estrella"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/iv_oso"
        android:layout_alignStart="@+id/iv_oso" />

    <ImageView
        android:layout_width="@dimen/image_width"
        android:layout_height="@dimen/image_height"
        android:src="@drawable/iglesia"
        android:id="@+id/iv_iglesia"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/iv_uno"
        android:layout_alignStart="@+id/iv_uno" />

    <ImageView
        android:layout_width="@dimen/image_width"
        android:layout_height="@dimen/image_height"
        android:src="@drawable/osoo"
        android:id="@+id/iv_oso"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/iv_angel"
        android:layout_toStartOf="@+id/iv_angel"
        android:layout_marginRight="34dp"
        android:layout_marginEnd="34dp" />

    <ImageView
        android:layout_width="@dimen/image_width"
        android:layout_height="@dimen/image_height"
        android:src="@drawable/unooo"
        android:id="@+id/iv_uno"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/iv_angel"
        android:layout_toEndOf="@+id/iv_angel"
        android:layout_marginLeft="34dp"
        android:layout_marginStart="34dp" />

</RelativeLayout>
