<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondor">


    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/logo"
        android:id="@+id/imageView9"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="17dp"
       />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/edtNombreU"
        android:ems="10"
        android:layout_marginTop="150dp"
        android:hint="Usuario"

        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/edtContra"
        android:ems="10"
        android:layout_marginTop="28dp"
        android:inputType="textPassword"
        android:hint="ContraseÃ±a"
        android:layout_below="@+id/edtNombreU"
        android:layout_alignLeft="@+id/edtNombreU"
        android:layout_alignStart="@+id/edtNombreU" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Registrarse"
        android:id="@+id/btRegistro"
        android:onClick="registro"
        android:layout_below="@+id/btIngresar"
        android:layout_alignRight="@+id/edtContra"
        android:layout_alignEnd="@+id/edtContra"
        android:layout_marginTop="22dp"
        android:layout_alignLeft="@+id/edtContra"
        android:layout_alignStart="@+id/edtContra"
        android:background="@android:color/holo_blue_light" />

    <Button
        android:text="ingresar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btIngresar"
        android:onClick="ingresar"
        android:layout_below="@+id/edtContra"
        android:layout_alignLeft="@+id/edtContra"
        android:layout_alignStart="@+id/edtContra"
        android:layout_marginTop="42dp"
        android:layout_alignRight="@+id/btRegistro"
        android:layout_alignEnd="@+id/btRegistro"
        android:background="@android:color/holo_green_light" />

    <pl.droidsonroids.gif.GifImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/lapiz_b"
        android:id="@+id/gifImageView"
        android:layout_above="@+id/btIngresar"
        android:layout_marginBottom="41dp"
        android:layout_alignTop="@+id/edtNombreU"
        android:layout_toRightOf="@+id/edtNombreU"
        android:layout_toEndOf="@+id/edtNombreU" />

    <pl.droidsonroids.gif.GifImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/goma"
        android:id="@+id/gifImageView2"
        android:layout_below="@+id/edtNombreU"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="15dp"
        android:layout_above="@+id/btIngresar"
        android:layout_toRightOf="@+id/edtContra"
        android:layout_toEndOf="@+id/edtContra" />

    <pl.droidsonroids.gif.GifImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/kid"
        android:id="@+id/gifImageView3"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/btRegistro" />


</RelativeLayout>